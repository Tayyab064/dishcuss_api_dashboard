<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Restaurant
    <small>Owners</small>
  </h1>
</section>


<div class="row content">
  <div class="col-xs-12">
    <div class="box">
            <!-- <div class="box-header">
              <h3 class="box-title">Reviews</h3>
            </div> -->
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Verified</th>
                    <th>Restaurants</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% @user.each do |us| %>
                      <tr>
                        <td><%= us.name %></td>
                        <td><%= us.username %></td>
                        <td><%= us.email %></td>
                        <td><%= us.gender %></td>
                        <td><%= us.verified ? 'Yes' : 'No' %></td>
                        <td><% restu = Restaurant.approved.where(owner_id: us.id) %>
                            <% restu.each do |rest| %>
                              <%= link_to rest.name , restauarant_ad_details_path(rest.id) %><br>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
  </div>
</div>