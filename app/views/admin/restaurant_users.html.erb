<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Restaurant
    <small>Owners</small>
    <small style="float: right;"><button type="button" class="btn btn-info" data-toggle="modal" data-target="#create_owner">Create Restaurant Owner</button></small>
  </h1>

  <!-- Modal -->
  <div class="modal fade" id="create_owner" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create Restaurant Owner</h4>
        </div>
        <div class="modal-body">
          
          <%= form_tag(create_restaurant_owner_admin_path , method: "post", 'data-no-turbolink' => true) do %>
            <div class="box-body">
              <div class="form-group">
                <%= label_tag 'name', 'Name'%>
                <%= text_field_tag :name , '' , class: 'form-control', autofocus: true %>
              </div>
              <div class="form-group">
                <%= label_tag 'username', 'Username'%>
                <%= text_field_tag :username, '' , class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= label_tag 'email', 'Email'%>
                <%= text_field_tag :email , '' , class: 'form-control', autofocus: true %>
              </div>
              <div class="form-group">
                <%= label_tag 'password', 'Password'%>
                <%= text_field_tag :password, '' , class: 'form-control' %>
              </div>
            </div>              


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Create" , class: 'btn btn-default' %>
          <% end %> 
        </div>
      </div>
      
    </div>
  </div>
</section>


<div class="row content">
  <div class="col-xs-12">
    <div class="box">
            <!-- <div class="box-header">
              <h3 class="box-title">Reviews</h3>
            </div> -->
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Verified</th>
                    <th>Restaurants</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% @user.each do |us| %>
                      <tr>
                        <td><%= us.name %></td>
                        <td><%= us.username %></td>
                        <td><%= us.email %></td>
                        <td><%= us.gender.present? ? us.gender : 'Record Missing' %></td>
                        <td><%= us.verified ? 'Yes' : 'No' %></td>
                        <td><% restu = Restaurant.approved.where(owner_id: us.id) %>
                            <% restu.each do |rest| %>
                              <%= link_to rest.name , restauarant_ad_details_path(rest.id) %><br>
                            <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
  </div>
</div>