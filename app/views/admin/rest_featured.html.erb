<section class="content-header">
  <h1>
    Restaurants
    <small>Featured</small>
  </h1>
</section>


<div class="row content">
  <div class="col-xs-12">
    <div class="box">
            <!-- <div class="box-header">
              <h3 class="box-title">Reviews</h3>
            </div> -->
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Opening Time</th>
                    <th>Closing Time</th>
                    <th>Location</th>
                    <th>Featured</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% @restaurant.each do |rest| %>
                      <tr>
                        <td><%= rest.name %></td>
                        <td><%= rest.opening_time.strftime("%H:%M %p") %></td>
                        <td><%= rest.closing_time.strftime("%H:%M %p") %></td>
                        <td><%= rest.location %></td>
                        <td><%= link_to "Unfeature" , unfeature_rest_path(rest.id) %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
  </div>
</div>