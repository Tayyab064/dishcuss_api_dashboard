<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Reviews
    <small></small>
  </h1>
</section>

<div class="row content">
  <div class="col-xs-12">
    <div class="box">
            <!-- <div class="box-header">
              <h3 class="box-title">Reviews</h3>
            </div> -->
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Summary</th>
                    <th>Rating</th>
                    <th>Reviewer</th>
                    <th>Review On</th>
                    <th>Time</th>
                  </tr>
                </thead>
                <tbody>
                  <% @review.each do |us| %>
                    <tr>
                      <td><%= us.title %></td>
                      <td><%= us.summary %></td>
                      <td><%= us.rating %></td>
                      <td><%= us.reviewer.email %></td>
                      <td><%= us.reviewable_type %></td>
                      <td><%= us.created_at.strftime('%H:%M %F') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
  </div>
</div>