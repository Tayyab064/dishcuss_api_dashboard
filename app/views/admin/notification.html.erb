
<div class="row content">
  <div class="col-xs-12">
    <div class="box">

            <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Notification</h3>
            </div>
            <div class="box-body">
              <strong><i class="fa fa-user margin-r-5"></i> User</strong>

              <p class="text-muted">
              	<div>
                <strong>Username:  </strong><%= @notification.notifier.username %><br>
                <strong>Email:     </strong><%= @notification.notifier.email %><br>
                <strong>Gender:    </strong><%= @notification.notifier.gender.humanize %><br>
                </div>
              </p>

              <hr>

              <strong><i class="fa fa-bell margin-r-5"></i> Notification</strong>

              <p class="text-muted"><%= @notification.body %></p>

            </div>
          </div>
          </div>
  </div>
</div>