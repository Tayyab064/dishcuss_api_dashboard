                	<a href="<%= signin_path %>"><span class="login"><span>Login</span></span></a>
                </div>
    		</div>
        </div>
    </nav>
    <section class="a-banner-section">
    	<div class="container">
    		 <form role="form" class="a-search-form">
				<div class="input-group input-group-lg">
				  	<span class="input-group-addon" id="sizing-addon1"><i class="fa fa-search" aria-hidden="true"></i></span>
					<input type="text" class="form-control" placeholder="Search for Resturant, Dishes & Foodies ">
					<span class="input-group-btn">
				        <button class="btn btn-secondary" type="button">search</button>
				    </span>
				</div>
			</form>
			<div class="arcadian-cafe">
				<h2><%= @restaurant.name %></h2>
				<ul>
					<li><a href="javascript:;"><i class="fa fa-search" aria-hidden="true"></i></a></li>
