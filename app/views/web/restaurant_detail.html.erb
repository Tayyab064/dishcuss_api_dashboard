					<div id="photos" class="tab-pane fade">
						<h3>PHOTO</h3>
						<!-- <p>Some content in menu 1.</p> -->
                        <% @photos.each do |phot| %>
                        <div class="col-md-4">
                            <img src="<%= phot.image_url %>" class="img-rounded" alt="image" width="108" height="108" >
                        </div>
                        <% end %>
					</div>
					<div id="reviews" class="tab-pane fade in active">
                        <h3>REVIEW</h3>
                        <% @reviews.each do |review| %>
						<h3><%= review.title %></h3>
						<p><%= review.summary %></p>
                        <% end %>
					</div>
				</div>
			</div>
		</div>
        <aside class="a-sidebar-right">
        	<div class="food-photo">
            	<h3>Photos</h3>
                <% @photos.order(created_at: 'DESC').limit(6).each do |phot| %>
                    <img src="<%= phot.image_url %>" class="img-rounded" alt="image" width="92" height="92" >
                <% end %>
