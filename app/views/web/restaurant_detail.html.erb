<% if @restaurant.cover_image.present? %>
<style type="text/css">
    .a-banner-section{
        background: rgba(0, 0, 0, 0) url('<%= @restaurant.cover_image.image_url %>') no-repeat scroll 0 0 / cover ;
    }
</style>
<% else %>
<style type="text/css">
    .a-banner-section{
        background: rgba(0, 0, 0, 0) url('img/banner.png') no-repeat scroll 0 0 / cover ;
